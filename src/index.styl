.wrap
  width 100px
  height 100px
  color rgba(0,0,0,.3)
  &:hover
    color #2c97e8
  .dropzone
    display flex
    align-items center
    justify-content center
    cursor pointer
  .preview
    width 100%
    height 100%
    position relative
    .mask
      position absolute
      background rgba(0,0,0,.3)
      top 0
      left 0
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      color #fff
    img
      width 100%
      height 100%
    video
      width 100%
      height 100%
    .videoTitle
      color #000
      position absolute
      padding-left 15px
  .clear
    display inline-block
    font-weight bold
    position absolute
    right -0.7em
    top -0.7em
    width 1.4em
    height 1.4em
    line-height 1.4em
    text-align center
    border-radius 50%
    background #000
    color #fff
